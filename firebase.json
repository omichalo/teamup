{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "source": "functions",
    "runtime": "nodejs20"
  },
  "hosting": {
    "public": "out",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "appHosting": {
    "preview": {
      "buildCommand": "npm run build",
      "runCommand": "npm start",
      "framework": "nextjs"
    },
    "production": {
      "buildCommand": "npm run build",
      "runCommand": "npm start",
      "framework": "nextjs"
    }
  }
}
