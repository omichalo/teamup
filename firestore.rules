rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Fonction helper pour vérifier si l'utilisateur est coach
    // Version optimisée qui évite les appels get() coûteux
    function isCoach() {
      return request.auth != null && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'coach';
    }
    
    // Fonction helper pour vérifier si l'utilisateur existe
    function userExists() {
      return request.auth != null && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid));
    }
    
    // Règles pour les utilisateurs
    match /users/{userId} {
      // Permettre la lecture et l'écriture (création, mise à jour, suppression) 
      // pour l'utilisateur authentifié sur son propre document
      // IMPORTANT: userId doit correspondre à request.auth.uid
      // Utiliser 'write' pour permettre setDoc avec merge: true
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Règles pour les joueurs (lecture pour tous, écriture pour les coaches)
    match /players/{playerId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && isCoach();
    }
    
    // Règles pour les équipes
    match /teams/{teamId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && isCoach();
    }
    
    // Règles pour les matches
    match /matches/{matchId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && isCoach();
    }
    
    // Règles pour les compositions
    match /compositions/{compositionId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    // Règles pour les compositions par défaut
    match /compositionDefaults/{defaultsId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
 
    // Règles pour les disponibilités
    match /availabilities/{availabilityId} {
      allow read: if request.auth != null;
      // Pour l'instant, toute personne connectée peut mettre à jour les disponibilités
      allow write: if request.auth != null;
    }
    
    // Règles pour les enregistrements de brûlage
    match /burnRecords/{burnRecordId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && isCoach();
    }
    
    // Règles pour les paramètres du club
    match /clubSettings/{settingsId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && isCoach();
    }
  }
}
