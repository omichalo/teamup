rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function authRole() {
      return request.auth != null && request.auth.token.role != null
        ? request.auth.token.role
        : "player";
    }

    function isAdmin() {
      return authRole() == "admin";
    }

    function isCoach() {
      return isAdmin() || authRole() == "coach";
    }

    function isPlayer() {
      return authRole() == "player";
    }
    
    // Règles pour les utilisateurs
    match /users/{userId} {
      allow create: if isAuthenticated() && request.auth.uid == userId;
      allow read, update, delete:
        if isAuthenticated() &&
          (isAdmin() || request.auth.uid == userId);
    }
    
    // Règles pour les joueurs (lecture pour tous, écriture pour les coaches)
    match /players/{playerId} {
      allow read: if isAuthenticated();
      allow write: if isCoach();
    }
    
    // Règles pour les équipes
    match /teams/{teamId} {
      allow read: if isAuthenticated();
      allow write: if isCoach();
    }
    
    // Règles pour les matches
    match /matches/{matchId} {
      allow read: if isAuthenticated();
      allow write: if isCoach();
    }
    
    // Règles pour les compositions
    match /compositions/{compositionId} {
      allow read: if isAuthenticated();
      allow write: if isCoach();
    }

    // Règles pour les compositions par défaut
    match /compositionDefaults/{defaultsId} {
      allow read: if isAuthenticated();
      allow write: if isCoach();
    }
 
    // Règles pour les disponibilités
    match /availabilities/{availabilityId} {
      allow read: if isAuthenticated();
      // Les joueurs peuvent gérer leurs disponibilités
      allow write: if isAuthenticated();
    }
    
    // Règles pour les enregistrements de brûlage
    match /burnRecords/{burnRecordId} {
      allow read: if isAuthenticated();
      allow write: if isCoach();
    }
    
    // Règles pour les paramètres du club
    match /clubSettings/{settingsId} {
      allow read: if isAuthenticated();
      allow write: if isCoach();
    }
  }
}
