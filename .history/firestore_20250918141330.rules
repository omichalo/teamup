rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Fonction helper pour vérifier si l'utilisateur est coach
    // Version optimisée qui évite les appels get() coûteux
    function isCoach() {
      return request.auth != null && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'coach';
    }
    
    // Fonction helper pour vérifier si l'utilisateur existe
    function userExists() {
      return request.auth != null && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid));
    }
    
    // Fonction helper pour vérifier si l'utilisateur peut écrire ses propres disponibilités
    function canWriteOwnAvailability() {
      return request.auth != null && 
        request.auth.uid == resource.data.playerId;
    }
    
    // Règles pour les utilisateurs
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Règles pour les joueurs (lecture publique pour les API routes, écriture pour les coaches)
    match /players/{playerId} {
      allow read: if true; // Lecture publique pour les API routes
      allow write: if request.auth != null && isCoach();
    }
    
    // Règles pour les équipes
    match /teams/{teamId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && isCoach();
    }
    
    // Règles pour les matches (lecture pour tous les utilisateurs connectés, écriture pour les coaches)
    match /matches/{matchId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && isCoach();
    }
    
    // Règles pour les compositions
    match /compositions/{compositionId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && isCoach();
    }
    
    // Règles pour les disponibilités
    match /availabilities/{availabilityId} {
      allow read: if request.auth != null;
      // Les joueurs peuvent écrire leurs propres disponibilités
      // Les coaches peuvent écrire toutes les disponibilités
      allow write: if request.auth != null && 
        (isCoach() || canWriteOwnAvailability());
    }
    
    // Règles pour les enregistrements de brûlage
    match /burnRecords/{burnRecordId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && isCoach();
    }
    
    // Règles pour les paramètres du club
    match /clubSettings/{settingsId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && isCoach();
    }
    
    // Règles pour les métadonnées (lecture publique pour les API)
    match /metadata/{metadataId} {
      allow read: if true; // Lecture publique pour les API routes
      allow write: if request.auth != null && isCoach();
    }
  }
}
