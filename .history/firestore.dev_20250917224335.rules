rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Règles de développement - plus permissives
    // ATTENTION: À ne pas utiliser en production !
    
    // Règles pour les utilisateurs
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Règles pour les joueurs (lecture pour tous, écriture pour tous les utilisateurs connectés)
    match /players/{playerId} {
      allow read, write: if request.auth != null;
    }
    
    // Règles pour les équipes
    match /teams/{teamId} {
      allow read, write: if request.auth != null;
    }
    
    // Règles pour les matches
    match /matches/{matchId} {
      allow read, write: if request.auth != null;
    }
    
    // Règles pour les compositions
    match /compositions/{compositionId} {
      allow read, write: if request.auth != null;
    }
    
    // Règles pour les disponibilités
    match /availabilities/{availabilityId} {
      allow read, write: if request.auth != null;
    }
    
    // Règles pour les enregistrements de brûlage
    match /burnRecords/{burnRecordId} {
      allow read, write: if request.auth != null;
    }
    
    // Règles pour les paramètres du club
    match /clubSettings/{settingsId} {
      allow read, write: if request.auth != null;
    }
  }
}
